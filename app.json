{
  "expo": {
    "name": "pets-app",
    "slug": "pets-app",
    "version": "1.0.0",
    "orientation": "portrait",
    // gives an ability to directly debug JavaScript 
    // running on Hermes thru the Chrome debugger
    "jsEngine": "hermes",
    "icon": "./app/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/bg.jpg",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store"
    ]
  }
}
